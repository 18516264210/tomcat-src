    <servlet-name>fourteenservlet</servlet-name>
    <servlet-class>com.servlet.day04.FourteenServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>fourteenservlet</servlet-name>
    <url-pattern>/fourteen/*</url-pattern>
  </servlet-mapping>

  <!--
    HttpServletResponse返回状态码
  -->
