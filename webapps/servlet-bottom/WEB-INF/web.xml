    <servlet-name>eighteenservlet</servlet-name>
    <servlet-class>com.servlet.day04.EighteenServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>eighteenservlet</servlet-name>
    <url-pattern>/eighteen/*</url-pattern>
  </servlet-mapping>

  <!--
    Cookie
  -->
  <servlet>
    <servlet-name>nineteenservlet</servlet-name>
    <servlet-class>com.servlet.day05.NineteenServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>nineteenservlet</servlet-name>
    <url-pattern>/nineteen/*</url-pattern>
  </servlet-mapping>

  <!--
    cookie的存活时间
  -->

  <servlet>
    <servlet-name>twentyservlet</servlet-name>
    <servlet-class>com.servlet.day05.TwentyServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>twentyservlet</servlet-name>
    <url-pattern>/twenty/*</url-pattern>
  </servlet-mapping>

</web-app>
