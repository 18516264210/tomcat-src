    <servlet-name>sixteenservlet</servlet-name>
    <servlet-class>com.servlet.day04.SixteenServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>sixteenservlet</servlet-name>
    <url-pattern>/sixteen/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>seventeenservlet</servlet-name>
