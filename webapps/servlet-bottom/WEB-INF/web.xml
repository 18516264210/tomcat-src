    <servlet-name>fifteenservlet</servlet-name>
    <servlet-class>com.servlet.day04.FifteenServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>fifteenservlet</servlet-name>
    <url-pattern>/fifteen/*</url-pattern>
